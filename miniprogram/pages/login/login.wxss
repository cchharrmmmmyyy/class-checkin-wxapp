/* pages/login/login.wxss */
.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.login-form {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600rpx;
}

.logo {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.input-group {
  margin-bottom: 50rpx;
}

.input-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: border-color 0.3s;
}

.input:focus {
  border-color: #667eea;
}

.placeholder {
  color: #ccc;
  font-size: 28rpx;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.login-btn:active {
  opacity: 0.8;
}

.register-link {
  text-align: center;
}

.link-text {
  color: #667eea;
  font-size: 26rpx;
  text-decoration: underline;
}