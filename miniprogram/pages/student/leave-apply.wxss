/* pages/student/leave-apply.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  color: white;
}

.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.back-btn {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
}

.back-icon {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.placeholder {
  width: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
}

.welcome {
  font-size: 32rpx;
  opacity: 0.9;
}

.main-content {
  flex: 1;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.leave-form {
  background: white;
  border-radius: 40rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
}

.form-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.date-picker {
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  background: #f9f9f9;
}

.date-text {
  font-size: 32rpx;
  color: #333;
}

.date-arrow {
  font-size: 24rpx;
  color: #999;
}

.form-tip {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  text-align: right;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(45deg, #4ecdc4, #45b7d1);
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(78, 205, 196, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.95);
  box-shadow: 0 3rpx 10rpx rgba(78, 205, 196, 0.5);
}

.submit-btn:disabled {
  background: #ccc;
  box-shadow: none;
  transform: none;
}

.btn-text {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.submit-btn:disabled .btn-text {
  color: #999;
}

/* 日期选择器样式 */
.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.picker-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  padding: 30rpx;
  z-index: 1000;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.picker-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.picker-btn {
  font-size: 32rpx;
  color: #4ecdc4;
  font-weight: bold;
}