/* pages/student/leave-records.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  color: white;
}

.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.back-btn {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
}

.back-icon {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.refresh-btn {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
}

.refresh-icon {
  font-size: 28rpx;
  color: white;
}

.placeholder {
  width: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
}

.welcome {
  font-size: 32rpx;
  opacity: 0.9;
}

.main-content {
  flex: 1;
  padding: 40rpx 30rpx;
  overflow-y: auto;
}

.records-container {
  background: white;
  border-radius: 40rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
}

.no-records {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.no-records-text {
  font-size: 32rpx;
  color: #999;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  background: #f9f9f9;
  border-radius: 20rpx;
  padding: 30rpx;
  border-left: 8rpx solid #667eea;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.record-date {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.status-tag {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-text.pending {
  color: #ff9800;
}

.status-text.approved {
  color: #4caf50;
}

.status-text.rejected {
  color: #f44336;
}

.status-tag {
  background: #e3f2fd;
}

.status-tag.pending {
  background: #fff3e0;
}

.status-tag.approved {
  background: #e8f5e8;
}

.status-tag.rejected {
  background: #ffebee;
}

.record-footer {
  display: flex;
  justify-content: flex-end;
}

.record-id {
  font-size: 24rpx;
  color: #999;
}