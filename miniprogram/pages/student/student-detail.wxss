/* pages/student/student-detail.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  color: white;
}

.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
}

.placeholder {
  width: 60rpx;
}

.welcome {
  font-size: 32rpx;
  opacity: 0.9;
}

.main-content {
  flex: 1;
  padding: 30rpx;
}

.query-section {
  margin-bottom: 40rpx;
}

.single-btn-container {
  text-align: center;
}

.dual-btn-container {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.query-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(79, 172, 254, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.single-btn-container .query-btn {
  width: 400rpx;
  margin: 0 auto;
}

.personal-btn {
  background: linear-gradient(45deg, #4facfe, #00f2fe);
}

.class-btn {
  background: linear-gradient(45deg, #fa709a, #fee140);
}

.query-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 10rpx rgba(79, 172, 254, 0.5);
}

.btn-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.result-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  display: block;
}

.record-list, .class-record-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.record-item, .class-record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child, .class-record-item:last-child {
  border-bottom: none;
}

.record-date, .student-name {
  font-size: 28rpx;
  color: #666;
}

.record-status, .punch-status {
  font-size: 26rpx;
  font-weight: bold;
}

.punch-time {
  font-size: 24rpx;
  color: #999;
}

.no-data {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 40rpx 0;
  display: block;
}

/* 请假功能样式 */
.leave-section {
  margin-bottom: 40rpx;
  text-align: center;
}

.leave-btn {
  width: 400rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin: 0 auto;
}

.leave-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 10rpx rgba(255, 107, 107, 0.5);
}