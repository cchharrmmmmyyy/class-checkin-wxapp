/* pages/student/student-detail.wxss */
/* 使用全局样式类 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(45deg, #2E8B57, #3CB371, #4F9D5D, #8FBC8F);
  background-size: 600% 600%;
  animation: vibrantBackground 8s ease-in-out infinite;
  position: relative;
  overflow: hidden;
}

/* 背景装饰效果 */
.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  animation: rippleEffect 6s ease-in-out infinite;
  z-index: 1;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 2;
}

.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 4rpx;
}

.placeholder {
  width: 120rpx;
}

.welcome {
  font-size: 32rpx;
  color: white;
  opacity: 0.9;
  text-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.15);
  margin-top: 10rpx;
  display: block;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  padding: 30rpx;
  position: relative;
  z-index: 2;
}

/* 查询功能区域 */
.query-section {
  margin-bottom: 50rpx;
  display: flex;
  justify-content: center;
}

.single-btn-container {
  text-align: center;
  width: 100%;
  display: flex;
  justify-content: center;
}

.dual-btn-container {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
  width: 100%;
  max-width: 600rpx;
}

/* 查询按钮样式 */
.query-btn {
  flex: 1;
  height: 90rpx;
  border-radius: 45rpx;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(46, 139, 87, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

.single-btn-container .query-btn {
  width: 450rpx;
  margin: 0 auto;
}

.personal-btn, .class-btn {
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
}

.query-btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
  pointer-events: none;
}

.query-btn:active::after {
  width: 300rpx;
  height: 300rpx;
}

.query-btn:active {
  transform: scale(0.95);
  box-shadow: 0 5rpx 20rpx rgba(46, 139, 87, 0.3);
  background: linear-gradient(135deg, #287d4b 0%, #36a365 100%);
}

.query-btn:hover {
  box-shadow: 0 15rpx 40rpx rgba(46, 139, 87, 0.5);
  transform: translateY(-3rpx);
}

.btn-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  position: relative;
  z-index: 1;
}

.black-text {
  color: var(--primary-color);
}

/* 查询结果区域 */
.result-section {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(30rpx);
  -webkit-backdrop-filter: blur(30rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(46, 139, 87, 0.15);
  margin-top: 20rpx;
  position: relative;
  z-index: 2;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.result-section:hover {
  background: rgba(255, 255, 255, 0.7);
  box-shadow: 0 30rpx 80rpx rgba(46, 139, 87, 0.2);
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  text-align: center;
  margin-bottom: 40rpx;
  display: block;
  letter-spacing: 3rpx;
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 记录列表 */
.record-list, .class-record-list {
  max-height: 600rpx;
  overflow-y: auto;
  padding-right: 10rpx;
}

.record-item, .class-record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 15rpx;
  box-shadow: 0 5rpx 15rpx rgba(46, 139, 87, 0.1);
  transition: all 0.3s ease;
}

.record-item:hover, .class-record-item:hover {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 8rpx 25rpx rgba(46, 139, 87, 0.15);
  transform: translateY(-2rpx);
}

.record-item:last-child, .class-record-item:last-child {
  margin-bottom: 0;
}

.record-date, .student-name {
  font-size: 30rpx;
  color: var(--text-color);
  font-weight: 500;
  letter-spacing: 1rpx;
}

.record-status, .punch-status {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.record-status {
  color: var(--primary-color);
  background: rgba(46, 139, 87, 0.1);
}

.punch-status {
  background: rgba(46, 139, 87, 0.1);
}

.punch-status[style*="#52c41a"] {
  color: var(--primary-color);
  background: rgba(46, 139, 87, 0.1);
}

.punch-status[style*="#ff4d4f"] {
  color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
}

.punch-time {
  font-size: 26rpx;
  color: var(--light-text);
  margin-left: 20rpx;
}

.no-data {
  text-align: center;
  font-size: 28rpx;
  color: var(--light-text);
  padding: 60rpx 0;
  display: block;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 15rpx;
  margin-top: 20rpx;
}

/* 请假功能样式 */
.leave-section {
  margin-bottom: 40rpx;
  text-align: center;
  position: relative;
  z-index: 2;
}

.leave-btn {
  width: 450rpx;
  height: 90rpx;
  border-radius: 45rpx;
  border: none;
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
  box-shadow: 0 10rpx 30rpx rgba(46, 139, 87, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

.leave-btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
  pointer-events: none;
}

.leave-btn:active::after {
  width: 300rpx;
  height: 300rpx;
}

.leave-btn:active {
  transform: scale(0.95);
  box-shadow: 0 5rpx 20rpx rgba(46, 139, 87, 0.3);
  background: linear-gradient(135deg, #287d4b 0%, #36a365 100%);
}

.leave-btn:hover {
  box-shadow: 0 15rpx 40rpx rgba(46, 139, 87, 0.5);
  transform: translateY(-3rpx);
}

/* 动画效果 */
@keyframes vibrantBackground {
  0% {
    background-position: 0% 50%;
  }
  25% {
    background-position: 100% 50%;
  }
  50% {
    background-position: 100% 100%;
  }
  75% {
    background-position: 0% 100%;
  }
  100% {
    background-position: 0% 50%;
  }
}

@keyframes rippleEffect {
  0%, 100% {
    transform: scale(1);
    opacity: 0.6;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}