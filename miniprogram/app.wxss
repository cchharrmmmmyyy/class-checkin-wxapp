/**app.wxss**/
/* 全局颜色变量 */
:root {
  --primary-color: #2E8B57;
  --secondary-color: #3CB371;
  --light-green: #8FBC8F;
  --background-color: #f0f5f0;
  --text-color: #333;
  --light-text: #666;
  --white: #ffffff;
  --glass-bg: rgba(255, 255, 255, 0.6);
}

/* 全局样式重置 - 微信小程序不支持通配符选择器 */

/* 全局页面容器 */
.global-container {
  min-height: 100vh;
  background: linear-gradient(45deg, #2E8B57, #3CB371, #4F9D5D, #8FBC8F);
  background-size: 600% 600%;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
  animation: vibrantBackground 8s ease-in-out infinite;
}

/* 活力背景动画 */
@keyframes vibrantBackground {
  0% {
    background-position: 0% 50%;
  }
  25% {
    background-position: 100% 50%;
  }
  50% {
    background-position: 100% 100%;
  }
  75% {
    background-position: 0% 100%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* 磨砂玻璃卡片效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(30rpx);
  -webkit-backdrop-filter: blur(30rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  padding: 60rpx 50rpx;
  box-shadow: 0 20rpx 60rpx rgba(46, 139, 87, 0.15);
  position: relative;
  z-index: 2;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.glass-card:hover {
  background: rgba(255, 255, 255, 0.7);
  box-shadow: 0 30rpx 80rpx rgba(46, 139, 87, 0.2);
  transform: translateY(-10rpx);
}

/* 主按钮样式 */
.primary-btn {
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
  color: var(--white);
  border: none;
  border-radius: 45rpx;
  font-size: 34rpx;
  font-weight: bold;
  padding: 25rpx 60rpx;
  box-shadow: 0 10rpx 30rpx rgba(46, 139, 87, 0.4);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 按钮点击效果 */
.primary-btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
  pointer-events: none;
}

.primary-btn:active::after {
  width: 300rpx;
  height: 300rpx;
}

.primary-btn:active {
  transform: scale(0.95) translateY(2rpx);
  box-shadow: 0 5rpx 20rpx rgba(46, 139, 87, 0.3);
  background: linear-gradient(135deg, #287d4b 0%, #36a365 100%);
}

.primary-btn:hover {
  box-shadow: 0 15rpx 40rpx rgba(46, 139, 87, 0.5);
  transform: translateY(-3rpx);
}

/* 次要按钮样式 */
.secondary-btn {
  background: rgba(255, 255, 255, 0.8);
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding: 20rpx 50rpx;
  box-shadow: 0 5rpx 20rpx rgba(46, 139, 87, 0.15);
  transition: all 0.3s ease;
}

.secondary-btn:active {
  transform: scale(0.95);
  box-shadow: 0 3rpx 10rpx rgba(46, 139, 87, 0.25);
}

.secondary-btn:hover {
  background: var(--primary-color);
  color: var(--white);
  box-shadow: 0 8rpx 25rpx rgba(46, 139, 87, 0.3);
}

/* 统一输入框样式 */
.input-field {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border: none;
  border-bottom: 2rpx solid #b8d4c6;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 500;
  transition: all 0.3s ease;
  outline: none;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(46, 139, 87, 0.08);
  margin-bottom: 40rpx;
}

.input-field:focus {
  border-bottom-color: var(--primary-color);
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 4rpx 20rpx rgba(46, 139, 87, 0.15);
  transform: translateY(-2rpx);
}

.input-field::placeholder {
  color: var(--light-green);
  font-size: 28rpx;
  font-weight: 400;
}

/* 统一标题样式 */
.section-title {
  font-size: 44rpx;
  font-weight: bold;
  color: var(--primary-color);
  text-align: center;
  margin-bottom: 50rpx;
  letter-spacing: 4rpx;
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 2rpx 10rpx rgba(46, 139, 87, 0.2);
}

/* 通用容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 页面内容容器 */
.page-content {
  flex: 1;
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
}

/* 卡片标题 */
.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
}

/* 文本样式 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--secondary-color);
}

.text-light {
  color: var(--light-text);
  font-size: 28rpx;
}

/* 间距工具类 */
.mt-20 {
  margin-top: 20rpx;
}

.mt-40 {
  margin-top: 40rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mb-40 {
  margin-bottom: 40rpx;
}

